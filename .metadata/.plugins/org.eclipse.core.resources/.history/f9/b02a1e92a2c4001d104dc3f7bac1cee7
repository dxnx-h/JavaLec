package chap00_homework._20230316;

import java.util.Arrays;

public class _20230316_basic_0102 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/* Q1. int배열을 10개 생성해라.
 			int배열에 3의 배수를 차례대로 저장해라.
 			그리고 거꾸로 출력해라. 		 */
		int[] numArr = new int[10];
		
		int num = 0;
		int index = 0;
		
		while(index < 10) {
			num++;
			
			if(num % 3 == 0) {
				numArr[index++] = num;
			}
		} 
		
		for(int i = 0; i< numArr.length; i++) {

		}
		
		System.out.print(Arrays.toString(numArr));
		//배열 값 출력 Arratys.toString(지정배열)

		
		System.out.println();
		System.out.println("[Q1-1 시작]------------------------------------");
		

		/* Q1-1. int배열을 10개 생성해라.
			int배열에 3의 배수를 차례대로 저장해라.
			그리고 거꾸로 출력해라. 		 */
		int[] numArr2 = new int[10];
		
		int index2 = 10;
		int num2 = 0;
		
		while(index2 > 0) {
			num++;
			
			if(num2 % 3 == 0) {
				numArr[index2--] = num2;
			}
		}
	
		for(int i = 10; i > numArr2.length; i--) {
			System.out.println(numArr2[i--]);
		}

	
		System.out.println();
		System.out.println("[Q2 시작]------------------------------------");
	
	
		
		
		/* Q2. int배열을 10개 생성해라.
			  사용자로부터 10개의 값을 입력받고, 순서대로 출력하고, 총합을 구하세요		 */
	}

}
