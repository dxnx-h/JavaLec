		String str = sc.nextLine();
		

		int i;
		int numCnt = 0;
		
		int[] strArr = new int[i];
		
		//우선 "가"가 있는지 없는지 찾고
		while(str.contains("가")) { // true. 가가 있으면
			//인덱스 넘버 찾아서 numCnt를 해줘
			for(int j = 0; j < str.length(); j++) {
				if(strArr[i] == "가") {
					
				}
			}
		}
		
		System.out.println(str.contains("가"));
		
		while(str.contains("가")) {
			  if(str.contains("다")) {
				
			}
		}
		
		if(str.contains("가")) {
			if(str.contains("다")) { 
				for(int j = 0; j < str.length(); j++) {	
					numCnt += j;
		
			} 
				System.out.println("가&바가 존재하지 않습니다.");	
				}

		}
		
	
		
	}
	
}
