package chap00_homework._20230315;

public class _20230315_basic_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Q1. 10 ~ 1까지 거꾸로 while문으로 출력. OK
		int num1 = 10;

		while (num1 > 0) {
			System.out.println(num1);
			num1--; /// 밖으로 안빼고 바로 위에 num1 자리에 넣어도 댐
		}

		System.out.println("2번 답------------------------------------");

		// Q2. 10 ~ 1까지 거꾸로 do ~ while문으로 출력. 와ㅏ
		int num2 = 10;
		do {
			System.out.println(num2);
			--num2;
		} while (num2 > 0); //

		System.out.println("3번 답------------------------------------");

		// Q3. 10 ~ 1까지 거꾸로 for문으로 출력. 와ㅣ
		for (int i3 = 10; i3 > 0; i3--) {
			System.out.println(i3);
		}

		// Q4. 1 ~ 100까지 합을 while문으로 출력

		System.out.println("5번 답------------------------------------");

		// Q5. 1 ~ 100까지 합을 do ~ while문으로 출력
		int num5 = 1;
		int sum = 0; // int sum;은 안됨. 초기화가 되어야 덧셈이 가능함

		do {
			sum += num5; // sum은 매번 num5를 더하는 값인데
			num5++; // 매번 반복해서 1씩 커져야 함

		} while (num5 <= 100); // (언제까지?) num5가 100을 넘어가면 멈출거야

		System.out.println(sum);

		
		
		// Q6. 1 ~ 100까지 합을 for문으로 출력

	}

}
